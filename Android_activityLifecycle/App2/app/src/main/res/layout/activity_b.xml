<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004466"
    android:padding="8dip"
    >
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_b_label"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_large"
        android:textColor="@color/light_green"
        android:paddingBottom="16dip"
        />


    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_b_desc"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_medium"
        android:textColor="#FFFFFF"
        android:paddingBottom="16dip"
        />
    <Button
        android:id="@+id/btn_finish_b"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/btn_finish_b"
        android:textSize="@dimen/font_medium"
        android:onClick="finishActivityB"
        android:textColor="#FFFFFF"
        android:background="@color/black"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        android:shadowColor="#fefbfb"
        android:padding="16dip"/>
    </LinearLayout>